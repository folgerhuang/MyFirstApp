<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jkxy.myfirstapp">

    <permission android:name="com.jkxy.myfirstapp.permission.accessable" />

    <uses-permission android:name="com.jkxy.myfirstapp.permission.accessable" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:permission="com.jkxy.myfirstapp.permission.accessable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.jkxy.myfirstapp.action.myfirstaction" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>